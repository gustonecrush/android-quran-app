<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/surahItem"
    android:paddingVertical="15dp"
    android:background="@drawable/border"
    >

    <!-- Container of Detail Surah -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Number of Surah -->
        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_muslim"
                />

            <TextView
                android:id="@+id/tv_number_of_surah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="1"
                android:textColor="@color/secondary"
                android:fontFamily="@font/poppins_medium"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <!-- Surah Details -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            >

            <!-- Surah's Name -->
            <TextView
                android:id="@+id/tv_name_of_surah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Al-Fatihah"
                android:textColor="@color/secondary"
                android:fontFamily="@font/poppins_medium"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- Place's of Surah -->
                <TextView
                    android:id="@+id/tv_type_of_surah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="MECCAN"
                    android:textAllCaps="true"
                    android:textColor="@color/text"
                    android:fontFamily="@font/poppins_medium"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="  •  "
                    android:textAllCaps="true"
                    android:textColor="@color/text"
                    android:fontFamily="@font/poppins_medium"
                    />

                <!-- Surah's Verses -->
                <TextView
                    android:id="@+id/tv_verses_of_surah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="7 VERSES"
                    android:textAllCaps="true"
                    android:textColor="@color/text"
                    android:fontFamily="@font/poppins_medium"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Surah in Arabian -->
    <TextView
        android:id="@+id/tv_name_of_surah_in_arab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="ةحتافلا"
        android:textColor="@color/primary1"
        android:fontFamily="@font/amiri_bold"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />

</RelativeLayout>